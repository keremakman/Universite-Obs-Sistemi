@model (List<Fakulteler> fakultelers, List<Bolumler> bolumlers)

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Üniversite OBS Sistemi</title>
    <!-- Bootstrap CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet" />
    <link href="css/styles.css" rel="stylesheet" />
    <style>
        .navbar-brand {
            background-image: url('/okü.png');
            background-size: 100px auto;
            background-repeat: no-repeat;
            width: 300px;
            height: 100px;
            display: block;
            text-indent: -9999px;
            background-position: center;
        }
        body {
            background-color: #f8f9fa;
            background-image: url('/bg.jpg');
            background-size: cover;
            background-position: center;
            color: #333;
        }
        .card {
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: rgba(255, 255, 255, 0.9);
            color: #333;
        }
        .card-header {
            background-color: #007bff;
            border-bottom: 1px solid #ddd;
            padding: 10px 20px;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            font-weight: bold;
            color: #fff;
        }
        .card-body {
            padding: 20px;
        }
        .form-label {
            font-weight: bold;
            color: #333;
        }
        .btn-primary {
            background-color: #ff9900;
            border-color: #ff9900;
            color: #fff;
        }
        .btn-primary:hover {
            background-color: #cc7a00;
            border-color: #cc7a00;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="d-flex float-left" id="wrapper">
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light">Fakülte</div>
            <div class="list-group list-group-flush">
                @foreach (var item in Model.fakultelers)
                {
                    <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-action="Index" asp-route-id="@item.FakulteId">@item.FakulteAd</a>
                }
            </div>
        </div>
        <div id="page-content-wrapper" class="float-right">
            <h1>Üniversite OBS Sistemi</h1>
            <form class="d-flex search-form" asp-action="Search" asp-controller="Home" method="get">
                <input class="form-control me-2" type="search" placeholder="Ara..." aria-label="Search" name="searchString">
                <button class="btn btn-outline-success" type="submit">Ara</button>
            </form>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Fakülte Adı</th>
                        <th scope="col">Bölüm Adı</th>
                        <th scope="col">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.bolumlers)
                    {
                        <tr>
                            <td scope="row">@item.BolumId</td>
                            <td>@item.Fakulte.FakulteAd</td>
                            <td>@item.BolumAd</td>
                            <td>
                                <a asp-action="EditBolum" asp-route-id="@item.BolumId" class="btn btn-primary">Düzenle</a>
                                <a asp-action="DeleteBolum" asp-route-id="@item.BolumId" class="btn btn-danger">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/scripts.js"></script>
</body>
</html>
